    </div>
    <!-- .featured-top -->	
    
    
    <!-- InstanceEndEditable -->
    
    <div class="layout-medium"> 
        <div id="primary" class="content-area">
     
            <div id="content" class="site-content" role="main">
            
                    <!-- .hentry -->
                    <article class="hentry post single-post">
                    
                        
                        <!-- .entry-content -->
                        <div class="entry-content">
                                                                
                            <div class="content-ckeditor">

                            </div>
                            
                        </div>
                        <!-- .entry-content -->
                            
