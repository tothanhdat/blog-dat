<script>
    $(document).ready(function(){
        let blogID = `<%=infoBlog._id%>`;
        $.ajax({
            url: `/blog/info/${blogID}`,
            method: 'GET',
            success: resp => {
                let infoBlog = resp.data;
                if(!resp.error){
                    $('.content-ckeditor').append(infoBlog.content)
                }else{
                    return toastr['error']('Thêm thất bại', 'Thông báo');
                }
            },
            error: err => console.log({ err })
        });

        $(document).on('click', '.btnComment', function(e) {
            e.preventDefault();
            return toastr['warning']('Tính năng này đang được phát triển', 'Thông báo');
        });
    })
    
</script>